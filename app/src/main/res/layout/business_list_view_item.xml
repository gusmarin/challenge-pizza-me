<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/business_item"
    android:layout_width="match_parent"
    android:layout_height="92dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/business_name_text_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/business_item_height"
            android:layout_weight="1"
            android:layout_marginHorizontal="@dimen/business_item__margin_horizontal"
            android:gravity="bottom|left"/>

        <TextView
            android:id="@+id/business_distance_text_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/business_item_height"
            android:gravity="bottom|left"/>
    </LinearLayout>

    <TextView
        android:id="@+id/business_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/business_item_height"
        android:layout_marginHorizontal="@dimen/business_item__margin_horizontal"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/business_phone_text_view"
        android:gravity="bottom|left"/>

    <TextView
        android:id="@id/business_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/business_item_height"
        android:layout_marginHorizontal="@dimen/business_item__margin_horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom|left" />

</RelativeLayout>