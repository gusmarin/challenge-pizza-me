<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/business_item"
    android:layout_width="match_parent"
    android:layout_height="90dp">

    <TextView
        android:id="@+id/business_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/business_item_height"
        android:layout_marginHorizontal="@dimen/business_item_horizontal"
        android:layout_marginVertical="@dimen/business_item_vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom|left"
        android:text="Name" />

    <TextView
        android:id="@+id/business_distance_text_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/business_item_height"
        android:layout_marginHorizontal="@dimen/business_item_horizontal"
        android:layout_marginVertical="@dimen/business_item_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="bottom|right"
        android:text="Distance" />
</RelativeLayout>